<view class='container'>
  <view class='head'>
    <view class='user-head'>
    <image src='{{userImage}}' class='user-image'></image>
    </view>
    <view class='user-nameText'>
    <text class='user-name'>{{userName}}</text>
    </view>
  </view>
  <view class='body'>
    <view class='body-item1'>
      <image src='../../images/myinfo.png' class='myinfo-icon'></image>
      <text class='myinfo-text'>我的</text>
    </view>
     <view class='body-item2'>
      <image src='../../images/set.png' class='setting-icon'></image>
      <text class='setting-text'>设置</text>
    </view>
  </view>
</view>
<button open-type='getUserInfo' bindtap='getInfo'>获取用户信息</button>